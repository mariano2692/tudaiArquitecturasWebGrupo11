<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="Integrador 2">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ðŸ”¹ Entidades mapeadas -->
        <class>entities.Carrera</class>
        <class>entities.Estudiante</class>
        <class>entities.Inscripcion</class>

        <properties>
            <!-- ðŸ”¹ ConfiguraciÃ³n JDBC para MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/entregable2"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>

            <!-- ðŸ”¹ Estrategia de generaciÃ³n del esquema -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

            <!-- ðŸ”¹ Mostrar SQL en consola -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            
            <!-- ðŸ”¹ ConfiguraciÃ³n de logging para reducir mensajes -->
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
